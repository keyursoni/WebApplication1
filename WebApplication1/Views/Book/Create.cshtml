@model WebApplication1.Models.Book  
@{
    ViewBag.Title = "Create";
}

<div class="card" style="width:60%; margin:auto;">
    <div class="card-header bg-dark text-white">
        <h5>Create New</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Bookname)
                        @Html.TextBoxFor(m => m.Bookname, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Bookname)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Authorname)
                        @Html.TextBoxFor(m => m.Authorname, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Authorname)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Bookprice)
                        @Html.TextBoxFor(m => m.Bookprice, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Bookprice)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Category)
                        @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Category)
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        }
    </div>
</div>  